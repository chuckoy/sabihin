!!!
%html
  %head
    %link{:href => "http://yui.yahooapis.com/pure/0.2.0/pure-min.css", :rel => "stylesheet"}
    %link{:href => "http://fonts.googleapis.com/css?family=Cabin", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/index.css", :rel => "stylesheet"}
    %script{:src => "//code.jquery.com/jquery-1.10.2.min.js",  :type => "text/javascript"}
    %script{:src => "//underscorejs.org/underscore-min.js", :type => "text/javascript"}
    %script{:src => "/vendor/javascripts/moment.min.js", :type => "text/javascript"}
    %script{:src => "/javascripts/submit.js", :type => "text/javascript"}
    %script{:src => "/javascripts/copy.js", :type => "text/javascript"}
    %script{:src => "//sabihinmona.herokuapp.com/faye/client.js", :type => "text/javascript"}
    %script{:src => "/vendor/javascripts/jquery-linkify.min.js", :type => "text/javascript"}
    %script{:src => "http://jtruncate.googlecode.com/svn/trunk/jquery.jtruncate.pack.js", :type => "text/javascript"}

    %title #{@title}
  %body
    #header
      %h1 #{@title}
    #form
      %form.pure-form
        %fieldset
          %textarea.pure-input-1-2{:rows => "20"}
        %button.pure-button.pure-input-1-2 Send
    #messages
    #loader
      %img{:src => "/vendor/images/ajax-loader.gif"}

:javascript
  set_channel("#{@unparsed_title}")
